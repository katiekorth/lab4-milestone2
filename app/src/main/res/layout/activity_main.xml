<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:layout_constraintTop_toBottomOf="parent"
        android:layout_constraintLeft_toRightOf="parent"
        app:srcCompat="@drawable/photo_1580826237584_fda5b612e1bc"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <TextView
        android:id="@+id/latitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Latitude:"
        android:textColor="#FFFFFF"
        android:layout_constraintTop_toBottomOf="location101"
        android:layout_constraintLeft_toRightOf="parent"
        tools:layout_editor_absoluteX="37dp"
        tools:layout_editor_absoluteY="144dp" />

    <TextView
        android:id="@+id/longitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_constraintTop_toBottomOf="latitude"
        android:layout_constraintLeft_toRightOf="parent"
        android:layout_marginTop="16dp"
        android:text="Longitude:"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@+id/latitude"
        tools:layout_editor_absoluteX="37dp" />

    <TextView
        android:id="@+id/accuracy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_constraintTop_toBottomOf="longitude"
        android:layout_constraintLeft_toRightOf="parent"
        android:layout_marginTop="16dp"
        android:text="Accuracy:"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@+id/longitude"
        tools:layout_editor_absoluteX="36dp" />

    <TextView
        android:id="@+id/altitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_constraintTop_toBottomOf="accuracy"
        android:layout_constraintLeft_toRightOf="parent"
        android:layout_marginTop="16dp"
        android:text="Altitude:"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@+id/accuracy"
        tools:layout_editor_absoluteX="37dp" />

    <TextView
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_constraintTop_toBottomOf="altitude"
        android:layout_constraintLeft_toRightOf="parent"
        android:layout_marginTop="16dp"
        android:text="Address:"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@+id/altitude"
        tools:layout_editor_absoluteX="37dp" />

    <TextView
        android:id="@+id/location101"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_constraintTop_toBottomOf="parent"
        android:layout_constraintLeft_toRightOf="parent"
        android:text="Location 101"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="136dp"
        tools:layout_editor_absoluteY="48dp" />

</androidx.constraintlayout.widget.ConstraintLayout>